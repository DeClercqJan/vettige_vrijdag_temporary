{{ form_start(form, {'attr': {'id': 'product-update-complex-form', 'class' : "form-with-borders"}}) }}
<div class="modal-body">
    <label for="add" class="d-block">Naam</label>
    <div class="input-group mb-3">
        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Naam',  'aria-label':'Add', 'id':'add', ' aria-describedby' : 'button-addon' }}) }}
    </div>
    <div class="form-group">
        <label for="product_category" class="required">Category</label>
        <div class="container">
            <div class="radio-with-images row">
                {#            {{ form_widget(form.category) }}#}
                {% for key,value in form.category.vars.choices %}
                    <div class="col-6 col-md-4 custom-control custom-radio custom-control-inline mb-4">
                        <input name="product[category]" value={{ key }} id="edit-{{ key }}" type="radio"
                               class="custom-control-input">
                        <label for="edit-{{ key }}" class="custom-control-label bg-light-gray w-100">
                            <div class="p-3 d-flex justify-content-center image-wrapper mx-auto">
                                <img class="image-preview" src="{{ asset('uploads/images/' ~value.data.image) }}"
                                     alt="">
                            </div>
                            <p class="mb-0 p-3">{{ value.data.name }}</p>
                        </label>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
</div>
<div class="modal-footer">
    {% include('fragments/_update_button.html.twig') %}
</div>
{{ form_row(form._token) }}
{{ form_end(form, {render_rest: false}) }}
