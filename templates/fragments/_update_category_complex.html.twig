{{ form_start(form, {'attr': {'id': 'category-update-complex-form', 'enctype' : "multipart/form-data", 'class': 'form-with-borders'}}) }}
<div class="modal-body">
    <div class="row mb-4">
        <div class="col-12 col-sm-6 input-group file-with-preview d-flex flex-column">
            <div class="custom-file w-100">
                {{ form_widget(form.image, {'attr': {'class' : "custom-file-input",'aria-describedby':"inputGroupFileAddon01"}}) }}
                <label class="custom-file-label p-0 w-100" for="category_image">
                    <div class="p-3 d-flex justify-content-center bg-light-gray">
                        <img class="image-preview" src={{ asset('uploads/images/'~category.image) }} alt="">
                    </div>
                    <p class="mb-0 p-3">{% block CTAimage %}Pas afbeelding aan (svg){% endblock CTAimage %}</p>
                </label>
            </div>
        </div>

        <div class="col-12 col-sm-6 input-group file-with-preview d-flex flex-column">
            <div class="custom-file w-100">
                {{ form_widget(form.icon, {'attr': {'class' : "custom-file-input",'aria-describedby':"inputGroupFileAddon01"}}) }}
                <label class="custom-file-label p-0 w-100" for="category_icon">
                    <div class="p-3 d-flex justify-content-center bg-light-gray">
                        <img class="image-preview" src={{ asset('uploads/icons/'~category.icon) }} alt="">
                    </div>
                    <p class="mb-0 p-3">{% block CTAicon %}Pas icoon aan (svg)(svg){% endblock CTAicon %}</p>
                </label>
            </div>
        </div>
    </div>

    <label for="add" class="d-block">Naam</label>
    <div class="input-group mb-3">
        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Naam',  'aria-label':'Add', 'id':'add', ' aria-describedby' : 'button-addon' }}) }}
    </div>
</div>
<div class="modal-footer">
    {% include('fragments/_update_button.html.twig') %}
</div>
{{ form_row(form._token) }}
{{ form_end(form) }}
